<Window x:Class="Memory_game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_game"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="350"
        Closing="Window_Closing">
    <Grid>
        <Button Name="btn_new_user" Content="New User" HorizontalAlignment="Left" Margin="187,177,0,0" VerticalAlignment="Top" Width="75" Click="btn_new_user_Click"/>
        <Button Name="btn_delete_user" Content="Delete User" HorizontalAlignment="Left" Margin="187,220
                ,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-0.086,1.452" Click="btn_delete_user_Click"/>
        <Button Name="btn_play" Content="Play" HorizontalAlignment="Left" Margin="187,263,0,0" VerticalAlignment="Top" Width="75" Click="btn_play_Click"/>
        <Image Name="image_profile_picture" HorizontalAlignment="Left" Height="100" Margin="187,46,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox Name ="listBox_users" SelectionChanged="listBox_users_SelectionChanged" HorizontalAlignment="Left" Height="256" Margin="47,26,0,0" VerticalAlignment="Top" Width="121">
        </ListBox>

    </Grid>
</Window>
